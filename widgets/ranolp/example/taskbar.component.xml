<?xml version="1.0" encoding="utf-8" ?>
<group>
    <import-font url="https://cdn.jsdelivr.net/gh/orioncactus/pretendard/dist/public/static/Pretendard-Black.otf" />
    <import-font url="https://cdn.jsdelivr.net/gh/orioncactus/pretendard/dist/public/static/Pretendard-ExtraBold.otf" />
    <import-font url="https://cdn.jsdelivr.net/gh/orioncactus/pretendard/dist/public/static/Pretendard-Bold.otf" />
    <import-font url="https://cdn.jsdelivr.net/gh/orioncactus/pretendard/dist/public/static/Pretendard-SemiBold.otf" />
    <import-font url="https://cdn.jsdelivr.net/gh/orioncactus/pretendard/dist/public/static/Pretendard-Medium.otf" />
    <import-font url="https://cdn.jsdelivr.net/gh/orioncactus/pretendard/dist/public/static/Pretendard-Regular.otf" />
    <import-font url="https://cdn.jsdelivr.net/gh/orioncactus/pretendard/dist/public/static/Pretendard-Light.otf" />
    <import-font url="https://cdn.jsdelivr.net/gh/orioncactus/pretendard/dist/public/static/Pretendard-ExtraLight.otf" />
    <import-font url="https://cdn.jsdelivr.net/gh/orioncactus/pretendard/dist/public/static/Pretendard-Thin.otf" />

    <import-font url="https://www.nerdfonts.com/assets/fonts/Symbols-2048-em%20Nerd%20Font%20Complete.ttf" />

    <fetch-data 
        name="cpu%"

        source="pdh"
        query="\Processor(_Total)\% Processor Time"
        format="float"
    />
    <fetch-data 
        name="ram%"

        source="global-memory-status"
        query="dMemoryLoad"
        format="float"
    />
    <fetch-data 
        name="ram-use"

        source="global-memory-status"
        query="ullUsedPhys"
        format="i64"
    />
    <fetch-data 
        name="ram-total"

        source="global-memory-status"
        query="ullTotalPhys"
        format="i64"
    />

    <hbox>
        <vbox>
            <set-position to="30vh" />
            <graph 
                width="130px"
                height="70vh"
                sample-count="20"

                min="0"
                max="100"

                stroke-color="#e03131"
                stroke-width="2"

                name="cpu%"
            />
            <set-position to="0px" />
            <hbox y-align="center">
                <margin size="4px" />
                <text color="yellow" font-family="Pretendard" font-weight="bolder">CPU</text>
                <set-position to="130px" />
                <text
                    font-family="Pretendard"
                    text-align="right"
                    font-size="24"
                    font-weight="bolder"
                >
                    <variable name="cpu%" format="float" />%
                </text>
            </hbox>
        </vbox>
        <vbox>
            <set-position to="30vh" />
            <graph 
                width="130px"
                height="70vh"
                sample-count="20"

                min="0"
                max="100"

                stroke-color="#5c7cfa"
                stroke-width="2"

                name="ram%"
            />
            <set-position to="0px" />
            <vbox x-align="center">
                <hbox y-align="center">
                    <margin size="4px" />
                    <text color="yellow" font-family="Pretendard" font-weight="bolder">RAM</text>
                    <set-position to="130px" />
                    <text
                        font-family="Pretendard"
                        text-align="right"
                        font-size="24"
                        font-weight="bolder"
                    >
                        <variable name="ram%" format="float" />%
                    </text>
                </hbox>
                <text
                    font-family="Pretendard"
                    font-size="12"
                    font-weight="normal"
                >
                    <variable name="ram-use" format="float" divide-by="1073741824" />
                    &#x0020;
                    &#x0020;
                    /
                    &#x0020;
                    &#x0020;
                    <variable name="ram-total" format="float" divide-by="1073741824" />
                    &#x0020;
                    GB
                </text>
            </vbox>
        </vbox>
    </hbox>
</group>
