<?xml version="1.0" encoding="utf-8" ?>
<group>
    <import-font url="https://cdn.jsdelivr.net/gh/orioncactus/pretendard/dist/public/static/Pretendard-Black.otf" />
    <import-font url="https://cdn.jsdelivr.net/gh/orioncactus/pretendard/dist/public/static/Pretendard-ExtraBold.otf" />
    <import-font url="https://cdn.jsdelivr.net/gh/orioncactus/pretendard/dist/public/static/Pretendard-Bold.otf" />
    <import-font url="https://cdn.jsdelivr.net/gh/orioncactus/pretendard/dist/public/static/Pretendard-SemiBold.otf" />
    <import-font url="https://cdn.jsdelivr.net/gh/orioncactus/pretendard/dist/public/static/Pretendard-Medium.otf" />
    <import-font url="https://cdn.jsdelivr.net/gh/orioncactus/pretendard/dist/public/static/Pretendard-Regular.otf" />
    <import-font url="https://cdn.jsdelivr.net/gh/orioncactus/pretendard/dist/public/static/Pretendard-Light.otf" />
    <import-font url="https://cdn.jsdelivr.net/gh/orioncactus/pretendard/dist/public/static/Pretendard-ExtraLight.otf" />
    <import-font url="https://cdn.jsdelivr.net/gh/orioncactus/pretendard/dist/public/static/Pretendard-Thin.otf" />

    <import-font url="https://www.nerdfonts.com/assets/fonts/Symbols-2048-em%20Nerd%20Font%20Complete.ttf" />

    <fetch-data 
        name="cpu%"

        source="windows/pdh"
        query="\Processor(_Total)\% Processor Time"
        format="float"
    />
    <fetch-data 
        name="cpu-mhz"

        source="windows/pdh"
        query="\Processor Information(_Total)\Processor Frequency"
        format="i64"
    />
    <fetch-data 
        name="ram%"

        source="windows/global-memory-status"
        query="dMemoryLoad"
        format="float"
    />
    <fetch-data 
        name="ram-use"

        source="windows/global-memory-status"
        query="ullUsedPhys"
        format="i64"
    />
    <fetch-data 
        name="ram-total"

        source="windows/global-memory-status"
        query="ullTotalPhys"
        format="i64"
    />
    <fetch-data
        name="net-up"
                    
        source="windows/pdh"
        query="\Network Interface(*)\Bytes Sent/sec"
        format="i32"
    />
    <fetch-data
        name="net-down"
                    
        source="windows/pdh"
        query="\Network Interface(*)\Bytes Received/sec"
        format="i32"
    />

    <hbox>
        <margin size="4px" />
        <vbox>
            <set-position to="30vh" />
            <graph 
                width="130px"
                height="70vh"
                sample-count="20"

                min="0"
                max="100"

                stroke-color="#e03131"
                stroke-width="2"

                name="cpu%"
            />
            <set-position to="0px" />
            <vbox x-align="center">
				<hbox y-align="center">
					<margin size="2px" />
					<text color="yellow" font-family="Pretendard" font-weight="bolder">CPU</text>
					<set-position to="130px" />
					<text
						font-family="Pretendard"
						text-align="right"
						font-size="24"
						font-weight="bolder"
					>
						<variable name="cpu%" format="float" />%
					</text>
				</hbox>
                <text
                    font-family="Pretendard"
                    font-size="12"
                    font-weight="normal"
                >
                    <variable name="cpu-mhz" format="float" divide-by="1024" />
                    &#x0020;
                    &#x0020;
                    GHz
                </text>
			</vbox>
        </vbox>
        <margin size="4px" />
        <vbox>
            <set-position to="30vh" />
            <graph 
                width="130px"
                height="70vh"
                sample-count="20"

                min="0"
                max="100"

                stroke-color="#5c7cfa"
                stroke-width="2"

                name="ram%"
            />
            <set-position to="0px" />
            <vbox x-align="center">
                <hbox y-align="center">
                    <margin size="2px" />
                    <text color="yellow" font-family="Pretendard" font-weight="bolder">RAM</text>
                    <set-position to="130px" />
                    <text
                        font-family="Pretendard"
                        text-align="right"
                        font-size="24"
                        font-weight="bolder"
                    >
                        <variable name="ram%" format="float" />%
                    </text>
                </hbox>
                <text
                    font-family="Pretendard"
                    font-size="12"
                    font-weight="normal"
                >
                    <variable name="ram-use" format="float" divide-by="1073741824" />
                    &#x0020;
                    &#x0020;
                    /
                    &#x0020;
                    &#x0020;
                    <variable name="ram-total" format="float" divide-by="1073741824" />
                    &#x0020;
                    GB
                </text>
            </vbox>
        </vbox>
        <margin size="8px" />
        <vbox>
            <hbox y-align="center">
                <text color="yellow" font-family="Symbols Nerd Font" font-weight="900">祝</text>
                <margin size="6px" />
                <text
                    font-family="Pretendard"
                    font-size="20"
                    font-weight="bolder"
                >
                    <variable name="net-up" format="float" divide-by="128" /> kbps
                </text>
            </hbox>
            <set-position to="50vh" />
            <hbox y-align="center">
               <text color="yellow" font-family="Symbols Nerd Font" font-weight="900"></text>
                <margin size="6px" />
                <text
                    font-family="Pretendard"
                    font-size="20"
                    font-weight="bolder"
                >
                    <variable name="net-down" format="float" divide-by="128" /> kbps
                </text>
            </hbox>
        </vbox>
    </hbox>
</group>
