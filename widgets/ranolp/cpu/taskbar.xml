<?xml version="1.0" encoding="utf-8" ?>
<hbox x-align="left" y-align="center">
    <text>CPU</text>
    <margin x="16" />
    <vbox x-align="center" y-align="top">
        <data-graph
            source="pdh"
            query="\\Processor(_Total)\\% Processor Time"
            min="0"
            max="100"
            height="100vh"
            width="64px"
        />
        <overlap>
            <data-text
                source="pdh"
                query="\\Processor(_Total)\\% Processor Time"
            />
        </overlap>
    </vbox>
</hbox>